<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/exercise_menu_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/exercise_menu_start_button_default_text"/>

    <TextView
        android:id="@+id/exercise_menu_status_text_view"
        android:text="Click Start To Download Exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/exercise_menu_start_button"
        android:layout_marginTop="8dp" />

</RelativeLayout>