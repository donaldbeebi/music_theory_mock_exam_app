<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:state_enabled="false"
        app:state_correct="true"
        android:state_selected="true"
        android:drawable="@drawable/shape_blue_button_selected_correct" />

    <item
        android:state_enabled="false"
        app:state_correct="false"
        android:state_selected="true"
        android:drawable="@drawable/shape_blue_button_selected_wrong" />

    <item
        android:state_enabled="false"
        app:state_correct="true"
        android:state_selected="false"
        android:drawable="@drawable/shape_blue_button_unselected_correct" />

    <item
        android:state_pressed="true"
        android:state_selected="true"
        android:drawable="@drawable/shape_blue_button_pressed_selected" />

    <item
        android:state_pressed="true"
        android:state_selected="false"
        android:drawable="@drawable/shape_blue_button_pressed" />

    <item
        android:state_pressed="false"
        android:state_selected="true"
        android:drawable="@drawable/shape_blue_button_selected" />

    <item
        android:drawable="@drawable/shape_blue_button_default" />

</selector>